- name: sei price feeder alerts
  rules:
  - alert: SeiPriceFeeder10PercentMissed
    expr: (avg by(validator) (sum by(validator) (rate(sei_oracle_vote_penalty_count{chain="pacific-1", type=~"abstain|miss", validator="seivaloper140l6y2gp3gxvay6qtn70re7z2s0gn57zl6nups"}[10m]))) / avg by(validator) (sum by(validator) (rate(sei_oracle_vote_penalty_count{chain="pacific-1", type=~"abstain|miss|success", validator="seivaloper140l6y2gp3gxvay6qtn70re7z2s0gn57zl6nups"}[10m])))) > 0.10
    for: 15m
    labels:
      severity: warning
    annotations:
      summary: "High penalty rate on validator"
      description: "Validator {{ $labels.validator }} has a penalty rate greater than 10 percent."

  - alert: SeiPriceFeeder25PercentMissed
    expr: (avg by(validator) (sum by(validator) (rate(sei_oracle_vote_penalty_count{chain="pacific-1", type=~"abstain|miss", validator="seivaloper140l6y2gp3gxvay6qtn70re7z2s0gn57zl6nups"}[10m]))) / avg by(validator) (sum by(validator) (rate(sei_oracle_vote_penalty_count{chain="pacific-1", type=~"abstain|miss|success", validator="seivaloper140l6y2gp3gxvay6qtn70re7z2s0gn57zl6nups"}[10m])))) > 0.25
    for: 15m
    labels:
      severity: warning
    annotations:
      summary: "High penalty rate on validator"
      description: "Validator {{ $labels.validator }} has a penalty rate greater than 25 percent."

- name: targets
  rules:
  - alert: monitor_service_down
    expr: up == 0
    for: 30s
    labels:
      severity: critical
    annotations:
      summary: "Monitor service non-operational"
      description: "Service {{ $labels.instance }} is down."
